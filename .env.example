# Server Configuration
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/shapes-clone

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRE=24h
JWT_COOKIE_EXPIRE=24

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# AI Engine Configuration
OPENAI_API_KEY=your-openai-api-key
OPENPIPE_API_KEY=your-openpipe-api-key
STABLE_DIFFUSION_API_KEY=your-stable-diffusion-api-key

# Voice Engine Configuration
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Discord Configuration (if needed)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_BOT_TOKEN=your-discord-bot-token

# Redis Configuration (for caching, optional)
REDIS_URI=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=debug

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
