# API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_API_TIMEOUT=30000

# Authentication
REACT_APP_JWT_STORAGE_KEY=shapes_admin_token

# Feature Flags
REACT_APP_ENABLE_VOICE=true
REACT_APP_ENABLE_IMAGE_GEN=true

# External Services
REACT_APP_CLOUDINARY_CLOUD_NAME=your_cloud_name
REACT_APP_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# UI Configuration
REACT_APP_MAX_UPLOAD_SIZE=10485760
REACT_APP_PAGINATION_PAGE_SIZE=10
REACT_APP_SNACKBAR_AUTO_HIDE_DURATION=6000

# Development
REACT_APP_DEBUG_MODE=false
BROWSER=none
PORT=3000

# Note: All environment variables must be prefixed with REACT_APP_ to be accessible in React
